<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">  <!-- Важно для корректного заполнения -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#201E28"
        tools:context=".ItemActivity">

        <ImageView
            android:id="@+id/item_list_image_one"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/mis" />

        <TextView
            android:id="@+id/item_list_title_one"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#fdfdfd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/item_list_text"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textSize="17sp"
            android:textColor="#fdfdfd"
            android:textAlignment="gravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/item_list_price_one"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fdfdfd"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/button_buy"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#77f370"
            android:textColor="#5e4602"
            android:layout_height="wrap_content"
            android:text="Добавить в корзину" />

        <TextView
            android:id="@+id/link_to_basket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:text="Перейти в корзину"
            android:textColor="#fdfdfd"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>